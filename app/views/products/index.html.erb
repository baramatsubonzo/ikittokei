<h1>商品リスト</h1>
<p>※(bonzo)は架空の通貨単位です</p>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格(bonzo)</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.note %></td>
        <td><%= link_to '詳細', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

